<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F6C9F3"
        android:gravity="center_vertical"
        android:text="Арсений Тагиров ПИ-211" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#C9EAF6"
        android:gravity="center_vertical"
        android:text="Если б мишки были пчёлами,\nТо они бы нипочём\nНикогда и не подумали\nТак высоко строить дом"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#C9F6CC"
        android:gravity="center_vertical"
        android:text="@string/poem"/>


</LinearLayout>